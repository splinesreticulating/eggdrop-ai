# OpenRouter API Configuration
OPENROUTER_API_KEY=your_api_key_here

# Gateway Configuration
PORT=3042

# Bot name (used in system prompt)
BOT_NAME=mybot

# Repository URL for OpenRouter attribution (optional)
REPO_URL=https://github.com/splinesreticulating/eggdrop-ai

# LLM Model (optional - defaults to qwen/qwen3-4b:free)
# See https://openrouter.ai/models for available models
MODEL=qwen/qwen3-4b:free

# Vector Memory Configuration
# Enable/disable long-term conversation memory with semantic search
MEMORY_ENABLED=true

# Path to SQLite database file for storing messages and embeddings
MEMORY_DB_PATH=./data/memory.db

# Number of semantically similar messages to retrieve from history
MEMORY_TOP_K=15

# Number of most recent messages to always include (for conversational flow)
MEMORY_RECENT_COUNT=5

# Delete messages older than this many days (0 = keep forever)
# Default: 90 days provides good historical context while preventing unbounded growth
MEMORY_RETENTION_DAYS=90
